@using IntranetGJAK
@model IEnumerable<IntranetGJAK.Models.File>

@{
    ViewData["Title"] = "Soubory";
}

@section styles {
    <link asp-append-version="true" href="~/lib/datatables.net-dt/css/jquery.dataTables.css" rel="stylesheet" />
}

<table id="filetable" class="display" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUploaded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uploader)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td class="name">
                <a href="@item.ToSerializeable().url">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td class="size">
                @Format.Bytes(item.Size)
            </td>
            <td class="date">
                @Html.DisplayFor(modelItem => item.DateUploaded)
            </td>
            <td class="uploader">
                @Html.DisplayFor(modelItem => item.Uploader)
            </td>
        </tr>
    }
</table>

@section scripts {
    <script asp-append-version="true" src="~/lib/datatables.net/js/jquery.dataTables.js"></script>
    <script asp-append-version="true" src="~/js/index.js"></script>
}